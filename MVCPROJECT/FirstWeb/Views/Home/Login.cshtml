@model FirstWeb.Controllers.UserRegister
@*
@{
    ViewData["Title"] = "Home Page";
}*@


<div class="container">
    <div class="row">

        <div class="col-4 offset-4 border border-primary px-3 pb-2">
            <div class="text-center">
                <h2 class="text-info">Login form</h2>
            </div>
            <form method="post" asp-action="Login">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" placeholder="Enter your email" class="form-control mb-2" autocomplete="on" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input type="password" asp-for="Password" placeholder="Enter password" class="form-control mb-2" autocomplete="on" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary my-2 form-control">Login</button>

                </div>
            </form>
            <div class="text-center">
                <a class="text-primary text-decoration-none" asp-action="ForgotPassword">Forgot password?</a>

            </div>
            <div class="text-center">
                <a class="btn btn-outline-secondary text-primary my-2 form-control text-decoration-none" asp-controller="Home" asp-action="Register">Crete account</a>

            </div>
        </div>

    </div>

</div>